{
    //                          THIS LINE IS A COMMENT.
    // It can be used within input data to JsonCpp (as an extension to the json standard).
    // See configuration setting for JsonCpp where it is instantiated.

    "Config": {

        "Logger": {
            "channel-name": "video_capture",
            "file-name": "video_capture_log.txt",
            "log-level": "DBUG"
        },

        "App-options": {
            "output-file":              "video_capture.data",
            "write-to-file":            1,
            "output-process":           "ffmpeg -nostdin -y -f h264 -i  pipe:0 -vcodec copy video_capture.mp4 2> /dev/null",

                // As an alternative to the line above, the next line can be used for testing:
                //      "output-process":           "dd of=video_capture.dd.data 2> /dev/null",

            "write-to-process":         1,
            "profiling":                0,
            "profile-timeslice-ms":     300
        },

        "Video": {

            "preferred-interface" :     "v4l2",
            "frame-count":              20,

            "frame-capture": {

                "v4l2": {
                    "name":             "V4L2",
                    "device-name" :     "/dev/video0",
                    "pixel-format":     "h264"
                },

                "opencv": {
                    "name":             "OPENCV",
                    "device-name" :     "TBD",
                    "pixel-format":     "TBD"
                }
            }
        }
    }
}

